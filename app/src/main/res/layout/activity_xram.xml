<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#B0C4DE"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button19"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#1E90FF"
        android:text="На главную"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="#000"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/button23"
        app:layout_constraintEnd_toEndOf="@+id/button23"
        app:layout_constraintStart_toStartOf="@+id/button23"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button23"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="47dp"
        android:backgroundTint="#1E90FF"
        android:text="Назад"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="#000"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/textView21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button19" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="372dp"
        android:layout_height="29dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Вхожу я в темные храмы"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:typeface="serif"
        app:layout_constraintBottom_toTopOf="@+id/textView21"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/button23"
        app:layout_constraintTop_toBottomOf="@+id/button19" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="360dp"
        android:layout_height="398dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="40dp"
        android:text="Вхожу я в темные храмы,
\nСовершаю бедный обряд.
\nТам жду я Прекрасной Дамы
\nВ мерцаньи красных лампад.
\nВ тени у высокой колонны
\nДрожу от скрипа дверей.
\nА в лицо мне глядит, озаренный,
\nТолько образ, лишь сон о Ней.
\nО, я привык к этим ризам
\nВеличавой Вечной Жены!
\nВысоко бегут по карнизам
\nУлыбки, сказки и сны.
\nО, Святая, как ласковы свечи,
\nКак отрадны Твои черты!
\nМне не слышны ни вздохи, ни речи,
\nНо я верю: Милая — Ты."
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="19sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/pauseButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="180dp"
        android:backgroundTint="#1E90FF"
        android:fontFamily="cursive"
        android:onClick="play"
        android:text="Слушать"
        android:textAlignment="center"
        android:textColor="#000"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pauseButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <Button
        android:id="@+id/pauseButton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#1E90FF"
        android:fontFamily="cursive"
        android:onClick="pause"
        android:text="Пауза"
        android:textAlignment="center"
        android:textColor="#000"
        android:typeface="normal"
        app:layout_constraintBottom_toTopOf="@+id/stopButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playButton"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        android:layout_marginBottom="150dp"
        android:backgroundTint="#DC143C"
        android:fontFamily="cursive"
        android:onClick="stop"
        android:text="Стоп"
        android:textAlignment="center"
        android:textColor="#000"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button23"
        app:layout_constraintTop_toBottomOf="@+id/pauseButton" />
</androidx.constraintlayout.widget.ConstraintLayout>